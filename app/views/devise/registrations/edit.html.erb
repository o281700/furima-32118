<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: 'user-edit-main', local: true do |f| %>
  <div class='user-edit'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        プロフィール
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="user-edit-form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
    </div>
    <div class="user-edit-form-group">
      <div class='form-text-wrap'>
        <label class="form-text">プロフィール</label>
        <span class="any">任意</span>
      </div>
      <%= f.text_area :profile, class:"edit-input-default", id:"nickname", placeholder:"例) furima太郎" %>
    </div>
    <div class='user-edit-btn'>
      <%= f.submit "変更する" ,class:"user-edit-red-btn" %>
    </div>
  </div>
<% end %>

<%= render "shared/footer" %>
